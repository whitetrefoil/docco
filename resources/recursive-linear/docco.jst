<!DOCTYPE html>

<html>
<head>
  <title><%= title %></title>
  <meta http-equiv="content-type" content="text/html; charset=UTF-8">
  <link rel="stylesheet" media="all" href="<%= path.join(relativeBase, 'public/stylesheets/normalize.css') %>" />
  <link rel="stylesheet" media="all" href="<%= relativeCss %>" />
</head>
<body>
  <div class="container">
    <div class="page">

      <div class="header">
        <% if (hasTitle) { %>
          <% var section = sections.shift(); %>
          <%= section.docsHtml %>
          <% if (!(/^\s*$/).test(section.codeText)) { %>
            <%= section.codeHtml %>
          <% } %>
        <% } else { %>
          <h1><%= title %></h1>
        <% } %>
      </div>

      <% for (var i = 0, l = sections.length; i<l; i++) { %>
        <% var section = sections[i]; %>
        <%= section.docsHtml %>
        <% if (!(/^\s*$/).test(section.codeText)) { %>
          <%= section.codeHtml %>
        <% } %>
      <% } %>
      <div class="fleur">h</div>

      <% if (sources.length > 1) { %>
        <div class="toc">
          <h3>Table of Contents</h3>
          <ol>
            <% for (var i=0, l = sources.length; i < l; i++) { %>
              <% var source = sources[i]; %>
              <li>
                <a class="source" href="<%= posixlize(path.relative(currentDir, destination(source))) %>">
                  <%= posixlize(path.relative(basedir, source)) %>
                </a>
              </li>
            <% } %>
          </ol>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>
